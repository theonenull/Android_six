<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schoolOutPictureFragment.SchoolOutPictureFirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textColor="@color/black"
            android:id="@+id/editText"
            android:layout_width="253dp"
            android:layout_height="0dp"
            android:layout_marginTop="144dp"
            android:autofillHints="你的名字"
            android:hint="你的姓名"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/editText2"
            android:layout_width="253dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:autofillHints="你的的学院名"
            android:hint="你的学院"
            app:layout_constraintEnd_toEndOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:textColor="@color/black"
            android:id="@+id/button_enter"
            android:layout_width="142dp"
            android:layout_height="72dp"
            android:layout_marginBottom="124dp"
            android:text="@string/enter_chinese_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/editText2"

            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintVertical_bias="1.0" />

        <Spinner
            android:theme="@style/life_spinner_style"
            android:gravity="center_horizontal"
            android:background="#E6DCE4"
            android:id="@+id/spinner"
            android:layout_width="234dp"
            android:layout_height="83dp"
            android:layout_marginTop="44dp"
            android:entries="@array/data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>